<UserControl x:Class="amira_kenza_yasmineUA2.AjouterDocuments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel Margin="10">
            <TextBlock Text="Ajouter un Livre"  Foreground="#E9DDDD" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Width="600"/>
            <TextBlock Text="ISBN"  Foreground="#E9DDDD" Width="280" FontWeight="Bold" />
            <TextBox x:Name="ISBNTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Titre" Foreground="#E9DDDD" Width="280" FontWeight="Bold" />
            <TextBox x:Name="TitreTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Auteur"  Foreground="#E9DDDD" Width="280" FontWeight="Bold" />
            <TextBox x:Name="AuteurTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Année"  Foreground="#E9DDDD" Width="275" FontWeight="Bold" />
            <TextBox x:Name="AnneeTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Ajouter" Width="80" Background="#2F316F" Foreground="#F0FFFF" Click="AjouterLivre_Click"/>
        </StackPanel>
    </Grid>
    </UserControl>
